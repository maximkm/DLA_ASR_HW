{
  "name": "baseline",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 80
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": [
      {
        "type": "FrequencyMasking",
        "args": {}
      },
      {
        "type": "TimeMasking",
        "args": {}
      }
    ]
  },
  "arch": {
    "type": "CTCTransformerEncoder",
    "args": {
      "n_feats": 80,
      "enc_output_dim": 1024,
      "vggblock_config": "[(64, 3, 2, 2), (128, 3, 2, 2)]",
      "transformer_config": "[(256, 8, 2048, 0.15)] * 4"
    }
  },
  "text_encoder": {
    "type": "BPETextEncoder",
    "args": {
      "file_tokenizer": "hw_asr/text_encoder/BPE_configs/BPE_tokenizer_500.json"
    }
  },
  "data": {
    "train": {
      "batch_size": 50,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "CommonVoiceDataset",
          "args": {
            "split": "train",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "test-other": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": true
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 5000,
      "epochs": 8,
      "anneal_strategy": "cos",
      "max_lr": 2e-3,
      "pct_start": 0.2,
      "div_factor": 20
    }
  },
  "trainer": {
    "epochs": 21,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 5000,
    "grad_norm_clip": 10
  }
}